arcane.madhan.app {
    encode gzip
    reverse_proxy arcane:3552
}


netbird.madhan.app {
  # Management HTTP API
  reverse_proxy /api/* netbird-management:9090

  # Management gRPC (HTTP/2 cleartext)
  reverse_proxy /management.ManagementService/* h2c://netbird-management:33073

  # Management WebSocket
  reverse_proxy /ws-proxy/management netbird-management:9090

  # Signal gRPC (h2c)
  reverse_proxy /signalexchange.SignalExchange/* h2c://netbird-signal:80

  # Signal WebSocket
  reverse_proxy /ws-proxy/signal netbird-signal:80

  # Relay over WebSocket
  reverse_proxy /relay netbird-relay:33080

  # Dashboard (catchâ€‘all)
  reverse_proxy * netbird-dashboard:80
}

